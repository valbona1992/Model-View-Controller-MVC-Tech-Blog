<div class="d-flex justify-content-center mt-5">
    <div class="col-md-6 log-form">
        <div class="login-text text-center">
            <h2 class="page-title">Login</h2>
        </div>
        <form id="login-form">
            <div class="form-group">
                <label for="email">Email:</label>
                <input class="col-sm-12 form-input" type="text" id="email-login" />
            </div>
            <div class="form-group">
                <label for="password-login">Password:</label>
                <input class="col-sm-12 form-input" type="password" id="password-login" />
            </div>
            <div class="form-group mt-3">
                <button class="col-sm-12 btn button" type="submit">Login</button>
            </div>
            <a class="nav-link text-center login mt-3" href="/signup">Create an account here to sign up!</a>
        </form>
    </div>
</div>


