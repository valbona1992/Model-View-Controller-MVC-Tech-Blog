

<div class=" b-3">
    <div class="card dashboard-card">
        <div class="list-item">
            <div class="card-header">
                <span>{{post.title}}</span>
                <span class="float-right">Posted by: {{post.user.username}} on {{format_date post.date}}</span>
            </div>
            <div class="card-body content-card">
                {{post.content}}
            </div>
        </div>
    </div>
    <div class="card dashboard-card">
        <div class="card-header">
            <h4>Add Comment</h4>
        </div>
        <form method="POST" class="card-body" id="comment-form">
            <div class="card-body content-card">
                <div class="form-group d-none">
                    <label for="post_id">Post ID:</label>
                    <input type="text" name="post_id" value="{{post.id}}" id="post_id" readonly />
                </div>
            
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea type="text" name="comment" id="comment" class="col-sm-12 form-input"></textarea>
                </div>
                <button type="submit" class="btn btn-dark col-sm-12">Comment</button>
            </div>
        </form>
    </div>
</div>
{{#each post.comments as |comment|}}
<div class="card dashboard-card">
    <div class="card-header">
        <h4>Comment</h4>
    </div>
    <div class="card-body content-card">
        <h4>{{comment.comment}}</h4>
        <footer class="blockquote-footer">Commented by: {{comment.user.username}} on {{format_date date}}</footer>
    </div>
</div>
{{/each}}

<script src="/js/comment.js"></script>