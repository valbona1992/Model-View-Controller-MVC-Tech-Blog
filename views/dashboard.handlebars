<div>
  <h3>My Posts</h3>
</div>

<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <a type="button" class="btn btn-dark" href="/dashboard/create">+ New Content</a>
    </div>
</div>

{{#if posts}}
  <div class="col-md-12 post-list">
    {{#each posts as |post| }}
      <div class="card cardLink">
        <div class="card-body">
          <a href="/post/{{post.id}}">
            <h5 class="post-title">{{post.title}}</h5>
          </a>
          <p class="post-content">{{post.content}}</p>
          <span class="card-author">Created by {{post.user.username}} on
        {{format_date date}}</span>
        </div>
      </div>
    {{/each}}
  </div>
  {{else}}
  <div>
    <p>There's nothing here yet. Create a post to share your thoughts with the world!</p>
  </div>
{{/if}}

